<% if user_signed_in? %>
  <% content_for :title, "Friends" %>

  <h1>Friends</h1>

  <div id="friends">
    <table class="table table-striped table-bordered table-hover">
      <thead class='table-dark'>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th scope="col">User ID</th>
        <th scope="col">Action</th>
      </tr>
      </thead>

      <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user_id === current_user.id %>
          <tr>
            <td>
              <%= friend.id %>
            </td>
            <td>
              <%= link_to friend.first_name + " " + friend.last_name, friend %>
            </td>
            <td>
              <%= friend.email %>
            </td>
            <td>
              <%= friend.phone %>
            </td>
            <td>
              <%= friend.twitter %>
            </td>
            <td>
              <%= friend.user_id %>
            </td>
            <!--            <td>-->
            <%#= link_to "Edit", edit_friend_path(friend.id), class: 'btn btn-link p-0 text-decoration-none' %>
            <!--            </td>-->
            <td>
              <%= button_to "Delete", friend, method: :delete, class: "btn btn-outline-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "New friend", new_friend_path, class: 'btn btn-secondary' %>
<% else %>
  <h1>Home#index</h1>
  <p>Find me in app/views/home/index.html.erb</p>
<% end %>


