<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      <%= @friend.first_name %>
      <%= @friend.last_name %>
    </h5>

    <p class="card-subtitle mb-2 text-body-secondary">
      <%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %>
    </p>

    <div class="btn-group d-flex gap-3">
      <%= link_to "Edit", edit_friend_path(@friend), class: 'btn btn-secondary rounded' %>

      <%= button_to "Delete", @friend, method: :delete, class: "btn btn-danger" %>

      <%= link_to "Back", friends_path, class: 'btn btn-secondary rounded' %>
    </div>
  </div>
</div>
